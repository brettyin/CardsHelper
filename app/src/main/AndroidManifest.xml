<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brettyin.cardshelper" >

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Topeka" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_player" >
        </activity>

        <activity
            android:theme="@style/Theme.AppCompat.Light"
            android:name=".GameSettingsActivity"
            android:label="@string/title_activity_game_settings" >
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.Light"
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.Light"
            android:name=".NewGameActivity"
            android:label="@string/title_activity_new_game" >
        </activity>
    </application>

</manifest>
