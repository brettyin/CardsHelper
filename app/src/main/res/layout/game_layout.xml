<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/gamePlayerName"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"
            android:text="contact det"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="14dp"/>
        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/game_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avatar_2"
            android:layout_below="@id/gamePlayerName"
            app:border_width="1dp"
            app:border_color="#00000000"
            android:paddingTop="78dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp" />
        <TextView
            android:id="@+id/gamePlayerNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nick"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_toRightOf="@id/game_profile_image"
            android:layout_alignBaseline="@id/game_profile_image"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="25dp"/>



        <ImageView

            android:id="@+id/game_levelimg"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:src="@drawable/c1"
            android:scaleType="fitCenter"

            android:layout_below="@id/txtName"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"/>
        <ImageView

            android:id="@+id/game_plus1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:layout_below="@id/txtName"
            android:layout_toLeftOf="@+id/game_levelimg"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="4dp" />
        <ImageView

            android:id="@+id/game_plus2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:layout_below="@id/txtName"
            android:layout_toLeftOf="@+id/game_plus1"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="4dp" />

